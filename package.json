{
  "name": "js-viewport-utils",
  "version": "3.0.0",
  "description": "A set of viewport utils",
  "repository": {
    "type": "git",
    "url": "https://github.com/tonysamperi/js-viewport-utils.git"
  },
  "keywords": [
    "within-viewport",
    "browser",
    "detect",
    "event",
    "infinite-scroll",
    "scroll",
    "view",
    "viewport",
    "window"
  ],
  "author": "Tony Samperi <github@tonysamperi.it> (https://tonysamperi.github.io)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tonysamperi/js-viewport-utils/issues"
  },
  "homepage": "https://github.com/tonysamperi/js-viewport-utils",
  "main": "dist/js-viewport-utils.umd.js",
  "module": "dist/js-viewport-utils.es5.js",
  "typings": "dist/types/js-viewport-utils.d.ts",
  "files": [
    "dist/**",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "rollup -c rollup.config.js",
    "build:docs": "typedoc --out docs --target es6 --theme minimal --mode file src",
    "build:watch": "rollup -c rollup.config.js -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "jsdom",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "/dist/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "globals": {
      "window": {},
      "document": {}
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@types/jest": "~23.3.2",
    "@types/jsdom": "^16.2.5",
    "@types/node": "~12.12.70",
    "colors": "~1.3.2",
    "coveralls": "~3.0.2",
    "cross-env": "~5.2.0",
    "husky": "~1.0.1",
    "jest": "~29.3.1",
    "jest-config": "~29.3.1",
    "jsdom": "~16.4.0",
    "lint-staged": "~8.0.0",
    "prompt": "~1.0.0",
    "replace-in-file": "~3.4.2",
    "rimraf": "~2.6.2",
    "rollup": "~0.67.0",
    "rollup-plugin-commonjs": "~9.1.8",
    "rollup-plugin-json": "~3.1.0",
    "rollup-plugin-node-resolve": "~3.4.0",
    "rollup-plugin-sourcemaps": "~0.4.2",
    "rollup-plugin-typescript2": "~0.18.0",
    "shelljs": "~0.8.3",
    "ts-jest": "~23.10.5",
    "ts-node": "~7.0.1",
    "tslint": "~6.1.3",
    "typedoc": "~0.12.0",
    "typescript": "~4.2.4",
    "uglify-js": "~3.6.0"
  },
  "dependencies": {}
}
